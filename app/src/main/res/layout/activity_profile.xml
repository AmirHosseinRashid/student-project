<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3D5D4D4"
    tools:context=".ProfileActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/bg_vw"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_view_top"

        />


    <ImageView
        android:id="@+id/Amir"
        android:layout_width="189dp"
        android:layout_height="177dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/amirhossinRashid"
        tools:layout_editor_absoluteY="-8dp"
        tools:ignore="ContentDescription,MissingConstraints" />



    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/bg_vw"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="30dp"
        android:textColor="#E6FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/Amir"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/email_label"
        android:textColor="#94FFFFFF"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_vw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage,TextSizeCheck,TextContrastCheck" />


