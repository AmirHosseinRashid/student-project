<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72E1DEDE"
    tools:context=".MainActivity">

    <View
        android:id="@+id/viewmain"
        android:background="@drawable/login_register"
        android:layout_width="370dp"
        android:layout_height="340dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <Button
        android:id="@+id/btnprofilemain"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"

        android:background="@drawable/bt_button"
        android:text="Page Profile"
        app:layout_constraintEnd_toEndOf="@+id/viewmain"
        app:layout_constraintStart_toStartOf="@+id/viewmain"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck,DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/btnloginmain"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_button"

        android:text="Page Login"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toStartOf="@+id/viewmain"
        app:layout_constraintTop_toBottomOf="@+id/btnprofilemain"
        tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded" />

    <Button
        android:id="@+id/btnpageregistermain"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bt_button"
        android:text="Page Profile"
        app:layout_constraintEnd_toEndOf="@+id/viewmain"
        app:layout_constraintTop_toBottomOf="@+id/btnprofilemain"
        tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded,TextSizeCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Pages"
        android:textStyle="bold"
        android:textSize="28dp"
        android:layout_marginTop="19dp"
        app:layout_constraintEnd_toEndOf="@+id/viewmain"
        app:layout_constraintStart_toStartOf="@+id/viewmain"
        app:layout_constraintTop_toTopOf="@+id/viewmain"
        tools:ignore="HardcodedText,SpUsage" />


</androidx.constraintlayout.widget.ConstraintLayout>